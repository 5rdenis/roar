<h1>Chain#input</h1>
<p>Find me in app/views/chain/input.html.erb</p>
<% if flash[:errors] %>
  <% flash[:errors].each do |field, msg| %>
    <div class="alert alert-danger">
      <strong><%=field%></strong>
      <%= msg %>
    </div>
  <% end %>
<% end %>
<%= form_tag("/chain/view", :method => "get") do %>
  <%= label_tag("Input array:") %>
  <%= text_field_tag(:n) %>  <br/>
  <%= submit_tag("Print chain") %>
<% end %>
<%= form_tag('/chain/all_records', :method => 'get') do %>
    <%= submit_tag((:'Dump database'))%>
<% end %>